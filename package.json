{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/libs/kritzel-stencil",
    "packages/libs/kritzel-angular",
    "packages/libs/kritzel-react",
    "packages/libs/kritzel-vue",
    "packages/demos/angular",
    "packages/demos/react",
    "packages/demos/vue"
  ],
  "devDependencies": {
    "@types/node": "^22.14.1",
    "concurrently": "^9.1.2",
    "localtunnel": "^2.0.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "test": "npm run test -w packages/libs/kritzel-stencil",
    "clean": "node ./scripts/clean.js",
    "bump-patch": "node ./scripts/bump-patch.js",
    "bump-minor": "node ./scripts/bump-minor.js",
    "bump-major": "node ./scripts/bump-major.js",
    "build": "npm run build --workspaces --if-present",
    "publish": "npm run release --workspaces --if-present",
    "tunnel": "concurrently \"lt --port 3333\" \"npm run start -w packages/libs/kritzel-stencil\"",
    "tunnel-angular": "concurrently \"lt --port 4200\" \"npm run start -w packages/demos/angular\"",
    "start": "npm run start -w packages/libs/kritzel-stencil",
    "demo:angular": "npm run start -w packages/demos/angular",
    "demo:react": "npm run start -w packages/demos/react",
    "demo:vue": "npm run start -w packages/demos/vue",
    "docs:copy-components": "node ./scripts/copy-component-docs.js",
    "docs:start": "npm run docs:copy-components && cd website && npm run start",
    "docs:build": "npm run docs:copy-components && cd website && npm run build",
    "docs:serve": "cd website && npm run serve"
  }
}
